{
    "name": "Boomerang Inspector",
    "version": "0.1.0",
    "description": "Boomerand Inspector Browser extension",
    "author": "Nigel Heron",
    "background": {
        "scripts": [
            "src/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Boomerang Inspector",
        "default_popup": "src/popup.html",
        "default_icon": {
            "128": "icons/boomr-128x128.png",
            "48": "icons/boomr-48x48.png",
            "32": "icons/boomr-32x32.png",
            "20": "icons/boomr-20x20.png"
        }
    },
    "icons": {
        "128": "icons/boomr-128x128.png",
        "48": "icons/boomr-48x48.png",
        "32": "icons/boomr-32x32.png",
        "20": "icons/boomr-20x20.png"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": ["src/content-script.js"],
        "run_at": "document_start",
        "all_frames": false
    }],
    "web_accessible_resources": [
        "src/injected-script.js"
    ],
    "manifest_version": 2
}

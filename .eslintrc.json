{
    "env": {
        "browser": true,
        "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 5
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
              "SwitchCase": 1,
              "VariableDeclarator": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
          "error",
          {
            "allow": ["warn", "error"]
          }
        ],
        "no-unused-vars": [
          "error",
          {
            "args": "none"
          }
        ],
        "no-shadow": [
          "error"
        ],
        "comma-dangle": [
          "error",
          "never"
        ]
    }
}
